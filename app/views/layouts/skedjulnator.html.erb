    <link href="stylesheets/print.css" media="print" rel="Stylesheet" type="text/css" />
  <% end %>

  <%= dhtml_calendar_includes %>

</head>
<body>
<div class="header">
  <h1>The Skedjulnator!</h1>
</div>

<p style="color: green"><%= flash[:notice] %></p>

<%= yield  %>

  <% unless @readonly %>
  <div class="footer">
    <a href='/holidays'>holidays</a>
    <a href='/meetings'>meetings</a>
    <a href='/vacations'>vacations</a>
    <a href='/shifts/view_weekly_schedule'>shifts</a>
    <a href='/work_shifts/list'>work shifts</a>
    <br/>
    <a href='/jobs'>jobs</a>
    <a href='/schedules'>schedules</a>
    <a href='/weekdays'>weekdays</a>
    <a href='/workers'>workers</a>
    <a href='/unavailabilities'>unavailabilities</a>
    <br/>
    <a href='/coverage_types'>coverage types</a>
    <a href='/frequency_types'>frequency types</a>
    <a href='/worker_types'>worker types</a>
  </div>
  <% end %>
</body>
</html>
