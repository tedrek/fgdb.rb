      <%= i %>s
      <div class="sidebar_section">
        <div>
          <%= link_to "entry", :controller => i + 's' %>
        </div>
        <div>
          <%= link_to "search", :controller => i + 's', :action => 'search' %>
        </div>
      </div>
    <% end %>
  <% end %>

