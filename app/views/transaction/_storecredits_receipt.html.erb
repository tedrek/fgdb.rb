<% if @transaction.methods.include?('storecredits') %>
  <% for credit in @transaction.storecredits.select{|x| !x.spent?} %>
    <fieldset style="border: 1px solid;" class="noprint">
      <h3>Store Credit Hash #<%= StoreChecksum.new_from_result(credit.id).checksum %></h3>
      Amount: $<%= credit.amount %><br />
      Expires: <%= credit.valid_until.strftime("%B %d, %Y") %>
    </fieldset>
  <% end %>
<% end %>
